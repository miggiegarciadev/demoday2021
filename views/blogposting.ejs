<body class="blogPostBody">

  <header>

    <nav id="indexNav">
      <ul>
        <li><a href="/index" class="button btn btn-outline-dark">Home</a></li>
        <li><a href="/emergency" class="button btn btn-outline-dark">Emergency</a></li>
        <li><a href="/mission" class="button btn btn-outline-dark">Mission</a></li>
        <li><a href="/signup" class="btn btn-outline-dark">Sign Up</a></li>
        <li><a href="/profile" class="button btn btn-outline-dark">Profile</a></li>
        <li><a href="/resources" class="button btn btn-outline-dark">Resources</a></li>
      </ul>
    </nav>

  </header>

  <br>
  <br>
  <br>
  <br>



  <div class="container">
    <h1 class="mb-4">Most Recent Blog Post</h1>
    <a href="/newarticle" class="btn btn-outline-dark">Make New Post</a>

    <!-- worked with Trek Mentor to further understand how this connects back to the DB-->
    <!-- each article posted -->
    <% article.forEach(newarticle => { %>
    <!-- this connects to the db on mongo, make sure that the collection key value pairs match up to the js variables -->
    <div class="card mt-4">

      <!-- first blog post -->
      <div class="card-body">
        <h4 class="card-title"><%= newarticle.title %></h4>
        <div class="card-subtitle text-muted mb-2">
          <%= newarticle.createdAt %>
        </div>
        <div class="card-text mb-2"><%= newarticle.description %></div>


        <form action="/blogposting/<%= newarticle._id %>" method="DELETE" class="d-inline">
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>

        <a href="/edit/<%= newarticle._id %>" class="btn btn-outline-dark">Edit</a>


        <a href="/blogpersonal/<%= newarticle._id %>" class="btn btn-outline-dark">Read More</a>


      </div>
    </div>
    <% }) %>

  </div>

  <br>
  <br>
  <br>


