  <div class="container">
    <h1 class="mb-4">Edit Article</h1>

    <h2> <%= article.title %>  </h2>

    <form action="/updateArticle" method="POST">
      <div>
        <label for="username">User Email:</label>
        <input type="text" value="<%= user.local.email %>" name="name">
        <br>
        <label for="title">Title</label>
        <input type="text" name="title" id="title" class="form-control" required value="<%= article.title %>">
      </div>

      <p></p>
      <p></p>

      <div>
        <label for="title"> Quick Caption or Hashtags</label>
        <input type="text" name="description" id="title" class="form-control" required value="<%= article.description %>">
      </div>

      <div>
        <label for="title"> Blog Post </label>
        <textarea name="blogpost" id="blogpost" cols="30" rows="10" class="form-control"> <%= article.bpost %> </textarea required></text>
      </div>

      <input type="hidden" name="articleid" value="<%= article._id %>">

      <button type="submit">Save</button>
    </form>



