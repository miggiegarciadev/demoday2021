<h1>My Profile</h1>

  <div class="container">

    <div class="page-header text-center">
    </div>

<br>

    <div class="row">



      <div class="col-sm-6" id="affirm">
        <h3>Affirmations</h3>
        <ul class="messages">
          <% for(var i=0; i< messages.length; i++) {%>
          <li class="message">
            <span><%= messages[i].name %></span>
            <span><%= messages[i].msg %></span>
            <span><%= messages[i].thumbUp %></span>
            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            <span>  <i class="fa fa-heart"></i></span>
          </li>
          <% } %>
        </ul>

        <h2>Add an Affirmation</h2>
        <% if (user.local.email) { %>
        <form action="/messages" method="POST">
          <input type="text" value="<%= user.local.email %>" name="name">
          <input type="text" placeholder="positive affirmation" name="msg">
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6" id="profileInfo">

          <h3><span class="fa fa-user"></span> User Profile Information</h3>

          <!-- PROFILE PHOTO UPLOAD & DELETE FEATURES -->
