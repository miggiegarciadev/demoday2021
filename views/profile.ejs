  <div class="container">

    <span>
      <h1>My Profile</h1>
    </span>

    <div class="page-header text-center">
    </div>

    <br>
    <br>


    <div class="row">

      <div class="col-sm-8" id="affirm">
        <h2>Daily Affirmations</h2>
        <ul class="messages">
          <% for(var i=0; i< messages.length; i++) {%>
          <li class="message">
            <span><%= messages[i].name %></span>
            <span><%= messages[i].msg %></span>
            <!-- <span><%= messages[i].thumbUp %></span> -->
            <span><i class="fa fa-heart" aria-hidden="true"></i></span>
            <!-- <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
            <!-- <span>  <i class="fa fa-heart"></i></span> -->
          </li>
          <% } %>
        </ul>
        <br>
        <h2>Add an Affirmation</h2>
        <% if (user.local.email) { %>
        <form action="/messages" method="POST">
          <input type="text" value="<%= user.local.email %>" name="name">
          <input type="text" placeholder="positive affirmation" name="msg">
          <br>
          <button type="submit">Submit</button>
        </form>
        <br>
      </div>
      <% } %>

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-4" id="profileInfo">

        <h3><span class="fa fa-user"></span> User Profile Info</h3>



        <!-- LOGGING INFO TO -->
        <% if (user.local.email) { %>
        <p>
          <strong>id</strong>: <%= user._id %><br>
          <strong>email</strong>: <%= user.local.email %><br>
          <span>
        </p>

        <a href="/unlink/local" class="btn btn-dark">Log Out</a>
        <% } else { %>
        <a href="/connect/local" class="btn btn-dark">Connect Local</a>
        <% } %>

      </div>

    </div>

    <br>
    <br>


